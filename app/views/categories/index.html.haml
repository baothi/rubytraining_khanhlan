%h1 Listing Categories
.container
  .table-bordered
    %table.table
      %thead
        %tr
          %th Name
          %th{:colspan => "3"}
      %tbody
        - @categories.each do |category|
          %tr
            %td= category.name
            %td= link_to 'Show', category,:class => 'btn btn-warning'
            %td= link_to 'Edit',  edit_category_path(category),:class => 'btn btn-info'
            %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-danger'
%br/
= link_to 'New category', new_category_path,:class => 'btn btn-default'