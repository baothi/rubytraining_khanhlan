.row
  .container.header_top
    .table-bordered
      %table.table
        %thead
          %tr
            %th Name
            %th Description
            %th Price
            %th Image
            %th Category
            %th{:colspan => "4"}
        %tbody
          - @products.each do |product|
            %tr
              %td= product.name
              %td= product.description
              %td= product.price
              %td= product.image
              %td= product.category.name
              %td= link_to 'Show', product,:class => 'btn btn-warning'
              %td= link_to 'Edit',  edit_product_path(product),:class => 'btn btn-info'
              %td= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-danger'
  %br/
  = link_to 'New Product', new_product_path,:class => 'btn btn-default'